{
	"name": "APIdog LongPoll",
	"description": "Расширение, позволяющее работать с LongPoll напрямую от клиента, не используя сервер APIdog'а",
	"version": "0.1",
	"manifest_version": 2,
	"background": {
		"scripts": ["background.js"],
		"persistent": false
	},
	"app": {
		"urls": [
			"http://apidog.ru/"
		],
		"launch": {
			"web_url": "http://apidog.ru/"
		}
	},
	"permissions": [
		"http://*.vk.com/",
		"https://*.vk.com/",
		"http://*.apidog.ru/",
		"https://*.apidog.ru/",
		"declarativeContent",
		"declarativeWebRequest"
	],
	"externally_connectable": {
		"matches": ["*://*.apidog.ru/*"]
	}
}